<h1><%= @restaurant.name %></h1>

<h2>Category: <%= @restaurant.category.capitalize %></h2>

<p>Address: <%= @restaurant.address %></p>
<p>Phone: <%= @restaurant.phone_number %></p>
<hr>
<h2>Reviews</h2>
<ul>
  <% @restaurant.reviews.each do |review| %>
    <li><%= review.content %> <strong>(<%= review.rating %>/5)</strong></li>
  <% end %>
</ul>

<h2>Add a review</h2>

<%= simple_form_for([@restaurant, @review]) do |f| %>
  <%= f.input :content %>
  <%= f.label :rating %>
  <%= f.select :rating, (0..5) %>
  <%= f.submit 'Submit a review', class: 'btn btn-primary' %>
<% end %>

